<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/small_marginLeftAndRight"
    android:paddingRight="@dimen/small_marginLeftAndRight">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_marginTopAndBottom"
        android:text="From"/>

    <AutoCompleteTextView
        android:id="@+id/startLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type in the Location"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_marginTopAndBottom"
        android:text="Travel mode"/>

    <Spinner
        android:id="@+id/travleMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/travel_mode">
    </Spinner>

    <FrameLayout
        android:id="@+id/map"
        android:layout_marginTop="@dimen/small_marginTopAndBottom"
        android:layout_marginBottom="@dimen/small_marginTopAndBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>